<h2 class="page-header">Register</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/users/register">
   <div class="form-group required">
    <label>Name</label>
    <input type="text" class="form-control" required placeholder="Name" name="name">
  </div>
  <div class="form-group required">
    <label>Username</label>
    <input type="text" class="form-control" required placeholder="Username" name="username">
  </div>
   <div class="form-group required">
    <label>Email</label>
    <input type="email" class="form-control" required placeholder="Email" name="email">
  </div>
  <div class="form-group required">
    <label>Password</label>
    <input type="password" class="form-control" placeholder="Password" name="password"  pattern=".{5,}"   required title="5 characters minimum">
  </div>
  <div class="form-group required">
    <label>Confirm Password</label>
    <input type="password" class="form-control" placeholder="Password" name="password2"  pattern=".{5,}"   required title="5 characters minimum">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>